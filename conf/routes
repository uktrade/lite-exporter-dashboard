# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

->          /common                                               common.Routes

# Application list
GET         /                                                     controllers.ApplicationListController.index
GET         /applications                                         controllers.ApplicationListController.applicationList(tab ?= null, sort ?= null, direction ?=null, company ?= null, show ?= null, page: Integer ?= null)

# Application tabs
GET         /application/*applicationRef/status-tracker           controllers.StatusTabController.showStatusTab(applicationRef: String)
GET         /application/*applicationRef/rfi                      controllers.RfiTabController.showRfiTab(applicationRef: String)
GET         /application/*applicationRef/rfi/*rfiId               controllers.RfiTabController.respond(applicationRef: String, rfiId: String)
POST        /application/*applicationRef/rfi                      controllers.RfiTabController.submitResponse(applicationRef: String)
GET         /application/*applicationRef/amend-application        controllers.AmendTabController.showAmendTab(applicationRef: String, action ?= null)
POST        /application/*applicationRef/amend-application        controllers.AmendTabController.submitAmendment(applicationRef: String)
GET         /application/*applicationRef/outcome-documents        controllers.OutcomeTabController.showOutcomeTab(applicationRef: String)
GET         /application/*applicationRef                          controllers.StatusTabController.showStatusTab(applicationRef: String)

# Licences tabs
GET         /licences                                             controllers.LicenceListController.licenceList(tab ?= null, sort ?= null, direction ?=null, page: Integer ?= null)

# Licence details
GET         /licence/*licenceRef                                  controllers.LicenceListController.licenceDetails(licenceRef: String)

# Test data
GET         /test                                                 controllers.TestDataController.insertDefaultTestData()
GET         /test/                                                controllers.TestDataController.insertDefaultTestData()
GET         /test/*testType                                       controllers.TestDataController.insertTestData(testType: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                         controllers.Assets.versioned(path="/public", file: Asset)