# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

->          /common                                               common.Routes

# Application list
GET         /                                                     controllers.ApplicationListController.index
GET         /applications                                         controllers.ApplicationListController.applicationList(tab: Option[String], date: Option[String], status: Option[String], show: Option[String], company: Option[String], createdBy: Option[String], page: Option[Integer])

# Application tabs
GET         /application/*applicationRef/status-tracker           controllers.ApplicationDetailsController.statusTab(applicationRef: String)
GET         /application/*applicationRef/rfi                      controllers.ApplicationDetailsController.rfiTab(applicationRef: String)
GET         /application/*applicationRef/rfi/*rfiId               controllers.ApplicationDetailsController.reply(applicationRef: String, rfiId: String)
POST        /application/*applicationRef/rfi                      controllers.ApplicationDetailsController.submitReply(applicationRef: String)
GET         /application/*applicationRef/amend-application        controllers.ApplicationDetailsController.amendTab(applicationRef: String, action: Option[String])
POST        /application/*applicationRef/amend-application        controllers.ApplicationDetailsController.amendApplication(applicationRef: String)
GET         /application/*applicationRef/outcome-documents        controllers.ApplicationDetailsController.outcomeTab(applicationRef: String)
GET         /application/*applicationRef                          controllers.ApplicationDetailsController.statusTab(applicationRef: String)

# Licences tabs
GET         /licences                                             controllers.LicenceListController.licenceList(tab: Option[String], reference: Option[String], licensee: Option[String], site: Option[String], date: Option[String], page: Option[Integer])

# Licence details
GET         /licence/*licenceRef                                  controllers.LicenceListController.licenceDetails(licenceRef: String)

# Test data
GET         /test                                                 controllers.TestDataController.insertTestData()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                         controllers.Assets.versioned(path="/public", file: Asset)