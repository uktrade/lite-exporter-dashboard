# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

->          /common                                               common.Routes

# Application list
GET         /                                                     controllers.Application.index
GET         /applications                                         controllers.Application.applicationList(tab: Option[String], date: Option[String], status: Option[String], show: Option[String], company: Option[String], page: Option[Integer])

# Application tabs
GET         /application/*applicationRef/status-tracker           controllers.LicenseApplicationController.statusTab(applicationRef: String)
GET         /application/*applicationRef/rfi                      controllers.LicenseApplicationController.rfiTab(applicationRef: String)
GET         /application/*applicationRef/rfi/*rfiId               controllers.LicenseApplicationController.reply(applicationRef: String, rfiId: String)
POST        /application/*applicationRef/rfi                      controllers.LicenseApplicationController.submitReply(applicationRef: String)
GET         /application/*applicationRef/amend-application        controllers.LicenseApplicationController.amendTab(applicationRef: String)
GET         /application/*applicationRef/outcome-documents        controllers.LicenseApplicationController.outcomeTab(applicationRef: String)
GET         /application/*applicationRef                          controllers.LicenseApplicationController.statusTab(applicationRef: String)

# Licences tabs
GET         /licences                                             controllers.Application.licenceList(activeTab=null)
GET         /licences/siels                                       controllers.Application.licenceList(activeTab="siels")
GET         /licences/ogels                                       controllers.Application.licenceList(activeTab="ogels")

# Licence details
GET         /licence/*licenceRef                                  controllers.Application.licenceDetails(licenceRef: String)

# Test data
GET         /test                                                 controllers.TestDataController.insertTestData()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                         controllers.Assets.versioned(path="/public", file: Asset)